@model List<CIS236Final.Models.Product>

<!-- Container with top margin -->
<div class="container mt-3">
    <h2>Product List</h2>

    <!-- Create New button with primary styling -->
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <!-- Search form with Bootstrap grid layout -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row">
            <!-- Search input for Name -->
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Search by Name" />
            </div>
            <!-- Filter input for Price -->
            <div class="col-md-4">
                <input type="text" name="filterPrice" class="form-control" placeholder="Filter by Price" />
            </div>
            <!-- Submit button -->
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

    <!-- Table to display product data -->
    <table class="table">
        <thead>
            <tr>
                <!-- Display column headers -->
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through each product in the model -->
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Display product details -->
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        <!-- Edit and Delete buttons with appropriate styling -->
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
