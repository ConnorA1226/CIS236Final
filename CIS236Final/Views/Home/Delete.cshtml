@model CIS236Final.Models.Product

<!-- Container with top margin -->
<div class="container mt-3">
    <h2>Delete</h2>
    <p>Are you sure you want to delete this product?</p>

    <!-- Display product details in a horizontal definition list -->
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <!-- Delete form with hidden field for product ID -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <!-- Delete button with danger styling -->
        <input type="submit" value="Delete" class="btn btn-danger" />

        <!-- Link to go back to the product list -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
